    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.18.0",
    "autoprefixer": "^10.4.21",
    "biome": "^0.3.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.6.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
