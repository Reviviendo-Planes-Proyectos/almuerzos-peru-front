{
  "name": "almuerzos-peru-front",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:ssr": "ng build --configuration production",
    "serve:ssr": "node dist/almuerzos-peru-front/server/server.mjs",
    "build:serve:ssr": "npm run build:ssr && npm run serve:ssr",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watchAll --verbose",
    "test:coverage": "jest --coverage --verbose",
    "test:ci": "jest --runInBand --coverage --watchAll=false --silent --passWithNoTests",
    "lint": "biome check ./src",
    "lint:fix": "biome check --fix ./src",
    "precommit": "lint-staged",
    "format": "npm run format:biome && npm run format:prettier",
    "format:biome": "biome format --write ./src",
    "format:prettier": "prettier --write \"src/**/*.{html,scss}\"",
    "prepare": "husky",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e": "playwright test"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/cdk": "^18.2.13",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.2.13",
    "@angular/forms": "^18.2.13",
    "@angular/material": "^18.2.13",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/platform-server": "^18.2.13",
    "@angular/router": "^18.2.13",
    "@angular/service-worker": "^18.2.13",
    "@angular/ssr": "^18.2.20",
    "express": "^4.21.2",
    "rxjs": "~7.8.1",
    "tailwindcss-animate": "^1.0.7",
    "tslib": "^2.6.3",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-builders/jest": "^18.0.0",
    "@angular-devkit/build-angular": "^18.2.20",
    "@angular/cli": "^18.2.20",
    "@angular/compiler-cli": "^18.2.13",
    "@biomejs/biome": "^2.0.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.54.1",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.18.0",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.2.4",
    "lint-staged": "^16.1.2",
    "postcss": "^8.4.38",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.1.1",
    "typescript": "~5.5.4"
  }
}
